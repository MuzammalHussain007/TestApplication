<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TestApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogue</item>


        <item name="popupMenuBackground">@drawable/popup_menu_background</item>




    </style>

    <style name="AppBottomSheetDialogue" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModelStyle</item>
    </style>
    <style name="AppModelStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/curved_background_spinner</item>
    </style>

    <style name="RoundShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>  <!-- This makes the image fully round -->
    </style>


    <style name="RoundedPopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
        <!-- Optionally, you can also change the text color, size, etc. -->
        <item name="android:textColor">@color/black</item> <!-- Text color -->
    </style>


    <style name="CurvedImageViewShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_12sdp</item> <!-- Adjust corner size as needed -->
    </style>



</resources>