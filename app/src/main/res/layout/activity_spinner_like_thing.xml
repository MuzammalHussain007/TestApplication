<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".New.SpinnerLikeThing">


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Manual Location"
        android:paddingVertical="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_20ssp"
        android:id="@+id/manualLocation"
        app:layout_constraintStart_toStartOf="parent"/>


    <ImageView
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        app:layout_constraintTop_toTopOf="@+id/manualLocation"
        android:src="@drawable/ic_collapse"
        android:id="@+id/colapseImage"
        app:layout_constraintBottom_toBottomOf="@+id/manualLocation"
        app:layout_constraintStart_toEndOf="@+id/manualLocation"
        app:tint="@color/black" />





</androidx.constraintlayout.widget.ConstraintLayout>