<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TestApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="popupMenuBackground">@drawable/popup_menu_background</item>


    </style>

    <style name="Theme.TestApplication" parent="Base.Theme.TestApplication" />

    <style name="AppBottomSheetDialogue" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModelStyle</item>
    </style>

    <style name="AppModelStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/curved_background_bottom_sheet</item>
    </style>


    <style name="RoundShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>  <!-- This makes the image fully round -->
    </style>

    <style name="RoundedPopupMenu" parent="Widget.MaterialComponents.PopupMenu.ListPopupWindow">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>

    </style>


</resources>